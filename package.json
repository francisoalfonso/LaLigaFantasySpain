{
  "name": "fantasy-laliga-dashboard",
  "version": "1.0.0",
  "description": "Dashboard de validación para influencer virtual de La Liga Fantasy - TEMPORADA 2025-26",
  "main": "backend/server.js",
  "scripts": {
    "start": "node backend/server.js",
    "dev": "nodemon backend/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:verbose": "jest --verbose",
    "test:integration": "node backend/routes/test.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,json,md}\"",
    "quality": "npm run lint && npm run format:check && npm test",
    "prepare": "husky",
    "db:init": "node database/init-database.js",
    "db:test": "node database/test-database.js",
    "auto-save": "bash scripts/auto-save.sh",
    "session-close": "bash scripts/complete-session-close.sh",
    "session-close-simple": "npm run auto-save && echo '✅ Sesión guardada automáticamente'",
    "db:test:quick": "node database/test-database.js --quick",
    "db:migrate": "npm run db:init",
    "db:keep-alive": "node scripts/supabase/keep-alive.js",
    "veo3:generate-ana": "node scripts/veo3/generate-ana-video.js",
    "veo3:add-player-card": "node scripts/veo3/add-player-cards.js",
    "veo3:concatenate": "node scripts/veo3/concatenate-videos.js",
    "veo3:monitor": "node scripts/veo3/monitor-generation.js",
    "veo3:test-all": "npm run veo3:test-ana && npm run veo3:test-cards && npm run veo3:test-concat",
    "veo3:test-ana": "node scripts/veo3/generate-ana-video.js --test",
    "veo3:test-cards": "node scripts/veo3/add-player-cards.js --test",
    "veo3:test-concat": "node scripts/veo3/concatenate-videos.js --test",
    "veo3:test-framework": "node scripts/veo3/test-viral-framework.js",
    "veo3:test-stats-card": "node scripts/veo3/test-stats-card-prompt.js",
    "veo3:test-3segments": "node scripts/veo3/test-three-segments.js",
    "veo3:generate-demo": "node scripts/veo3/generate-demo-pedri-3segments.js",
    "veo3:test-nicknames": "node scripts/veo3/test-aspas-with-nicknames.js",
    "veo3:test-retry": "node scripts/veo3/test-retry-system-e2e.js",
    "veo3:test-retry-v2": "node scripts/veo3/test-smart-retry-v2.js",
    "veo3:test-retry-v3": "node scripts/veo3/test-conservative-strategy-v3.js",
    "veo3:test-optimized": "node scripts/veo3/test-optimized-prompt-builder.js",
    "veo3:test-google-vs-kie": "node scripts/veo3/test-google-vertex-vs-kie.js",
    "veo3:test-nano-banana": "node scripts/veo3/test-nano-banana-flow-e2e.js",
    "veo3:test-phased": "node scripts/veo3/test-phased-workflow.js",
    "veo3:test-phase4": "node scripts/veo3/test-phase4-enhancements.js",
    "veo3:test-black-flashes": "node scripts/veo3/test-black-flashes.js",
    "veo3:delete-bad-images": "node scripts/veo3/delete-problematic-ana-images.js",
    "sync:player-photos": "node scripts/sync-player-photos.js",
    "instagram:test-e2e": "node scripts/instagram/test-e2e-chollos-instagram.js",
    "n8n:check-versions": "node scripts/n8n-version-check.js",
    "n8n:version-daily": "node scripts/n8n-version-check.js"
  },
  "keywords": [
    "fantasy",
    "laliga",
    "football",
    "dashboard",
    "sportmonks"
  ],
  "author": "Fantasy La Liga Bot",
  "license": "MIT",
  "dependencies": {
    "@supabase/supabase-js": "^2.57.4",
    "axios": "^1.12.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.1.0",
    "fluent-ffmpeg": "^2.1.3",
    "helmet": "^7.1.0",
    "jimp": "^1.6.0",
    "joi": "^18.0.1",
    "morgan": "^1.10.0",
    "node-html-to-image": "^5.0.0",
    "pg": "^8.16.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.18.1",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.3",
    "nodemon": "^3.0.1",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "backend/services/**/*.js",
      "!backend/**/*.test.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "backend/routes/test.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 3,
        "functions": 4,
        "lines": 3,
        "statements": 3
      }
    },
    "testTimeout": 10000
  }
}
